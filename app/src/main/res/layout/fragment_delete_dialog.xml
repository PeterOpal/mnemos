<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".custom_dialog.DeleteDialogFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/delete_warning_icon" />

        <TextView
            android:id="@+id/deleteType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/anton"
            android:letterSpacing="0.1"
            android:text="Delete xy"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/deleteDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:text="Are you sure you want to delete\n category &quot;xy&quot;?"
            android:textColor="#000000"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/finishLearningSessionButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                android:layout_weight="1"
                android:background="@drawable/cancel_button"
                android:fontFamily="@font/inter"
                android:text="@string/Cancel_button"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/resumeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/delete_button"
                android:fontFamily="@font/inter"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                android:text="@string/Yes_delete_button"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:backgroundTint="@null" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>